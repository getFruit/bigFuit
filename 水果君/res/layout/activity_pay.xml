<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


	    <TextView
	        android:id="@+id/price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView1"
	        android:layout_centerHorizontal="true"
	        android:text="2333.0"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/base_color_red"
	        android:textSize="40sp" />
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="70dp"
	        android:layout_toRightOf="@+id/price"
	        android:textColor="@color/base_color_red"
	        android:text="大洋" />
	
	    <TextView
	        android:id="@+id/pay3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/price"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:drawableTop="@drawable/pay3"
	        android:gravity="center"
	        android:visibility="invisible"
	        android:text="货到付款" />
	
	
	    <TextView
	        android:id="@+id/pay2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/pay1"
	        android:layout_alignBottom="@+id/pay1"
	        android:layout_toRightOf="@+id/pay3"
	        android:drawableTop="@drawable/pay2"
	        android:gravity="center"
	        android:text="微信支付" />

	    <TextView
	        android:id="@+id/pay1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/pay3"
	        android:layout_marginTop="12dp"
	        android:layout_toLeftOf="@+id/pay3"
	        android:drawableTop="@drawable/pay1"
	        android:gravity="center"
	        android:text="支付宝" />

	    
	    
	    <Button
	        android:id="@+id/cancel"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/pay1"
	        android:layout_marginTop="26dp"
	        android:background="@color/base_color_blue"
	        android:text="删除订单"
	        android:textColor="@color/base_color_white"
	        android:textSize="22sp" />
</RelativeLayout>