<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="清理缓存"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/add_category"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="自动"
                android:textColor="@color/text_green"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_category_choose"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center|right"
                android:background="@color/base_color_all_transparent"
                android:src="@drawable/add_choose" />

        </LinearLayout>

        <view android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_color_gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="意见反馈"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_season"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="保留"
                android:textColor="@color/text_green"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_season_choose"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/base_color_all_transparent"
                android:src="@drawable/add_choose" />
        </LinearLayout>
		<view android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_color_gray"/>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		    <view
		        android:layout_width="match_parent"
		        android:layout_height="20dp"
		        android:background="@color/view_grap_gray" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="8dp"
		        android:layout_marginLeft="20dp"
		        android:layout_marginStart="20dp"
		        android:layout_marginTop="8dp" >

		        <TextView
		            android:layout_width="80dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="联系邮箱"
		            android:textColor="@color/text_color_gray"
		            android:textSize="20sp" />

		        <EditText
		            android:id="@+id/add_count"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="20dp"
		            android:layout_marginStart="20dp"
		            android:layout_weight="1"
		            android:hint="xxx@xxx.xxx"
		            android:inputType="textEmailAddress"
		            android:textColor="@color/text_green"
		            android:textSize="18sp" >

		            <requestFocus />
		        </EditText>
		    </LinearLayout>

		    <view
		        android:layout_width="match_parent"
		        android:layout_height="0.8dp"
		        android:background="@color/line_color_gray" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="120dp"
		        android:background="@color/view_grap_gray"
		        android:orientation="vertical" >

		        <EditText
		            android:id="@+id/add_describe"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_margin="20dp"
		            android:background="@drawable/shape_base"
		            android:hint="您的宝贵意见"
		            android:lines="8" />
		    </LinearLayout>

		    <Button
		        android:id="@+id/bt_login"
		        android:layout_width="268dp"
		        android:layout_height="50dp"
		        android:layout_margin="15dp"
		        android:background="@color/base_color_blue"
		        android:gravity="center"
		        android:text="提交"
		        android:textColor="@color/base_color_white"
		        android:textSize="25sp" />
		</LinearLayout>

		<view
		    android:layout_width="match_parent"
		    android:layout_height="0.8dp"
		    android:background="@color/line_color_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="一键更新"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_origin"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="最新版"
                android:textColor="@color/text_green"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_origin_choose"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/base_color_all_transparent"
                android:src="@drawable/add_choose" />
        </LinearLayout>
		<view android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_color_gray"/>
		
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关于"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_color"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="alpha"
                android:textColor="@color/text_green"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_color_choose"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/base_color_all_transparent"
                android:src="@drawable/add_choose" />
        </LinearLayout>
		<view android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_color_gray"/>
		
		<view
	        android:layout_width="match_parent"
	        android:layout_height="20dp"
	        android:background="@color/view_grap_gray" />
        </LinearLayout>
        
    </ScrollView>
    
    
    
    
    
    
     
</LinearLayout>